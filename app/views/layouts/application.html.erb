<!DOCTYPE html>
<html>
    <head>
        <title><%= provide(:title, 'Sign up') %></title>
    </head>
    <body>
        <%= render 'layouts/header' %>
        <div class="container">
            <% flash.each do |message_type, message| %>
            <div class="alert alert-<%= message_type %>"><%= message %></div>
            <% end %>
            <%= yield %>
        </div>
    </body>
</html>